<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/listenerStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/listener_start" />

    <Button
        android:id="@+id/listenerStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/listenerStart"
        android:text="@string/listener_stop" />

    <ImageView
        android:id="@+id/walkingView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/temp_description"
        android:maxHeight="50dp"
        android:maxWidth="175dp"
        android:minHeight="50dp"
        android:minWidth="175dp"
        android:scaleType="centerInside"
        android:src="@drawable/walking"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/carView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/temp_description"
        android:maxHeight="50dp"
        android:maxWidth="175dp"
        android:minHeight="50dp"
        android:minWidth="175dp"
        android:scaleType="centerInside"
        android:src="@drawable/car"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/trainView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/temp_description"
        android:maxHeight="50dp"
        android:maxWidth="175dp"
        android:minHeight="50dp"
        android:minWidth="175dp"
        android:scaleType="centerInside"
        android:src="@drawable/train"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/idleView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/temp_description"
        android:maxHeight="50dp"
        android:maxWidth="175dp"
        android:minHeight="50dp"
        android:minWidth="175dp"
        android:scaleType="centerInside"
        android:src="@drawable/idle"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/noneView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/temp_description"
        android:maxHeight="50dp"
        android:maxWidth="175dp"
        android:minHeight="50dp"
        android:minWidth="175dp"
        android:scaleType="centerInside"
        android:src="@drawable/none"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/historyView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noneView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:divider="@color/white"
        android:dividerHeight="1dp"
        android:visibility="visible" >
    </ListView>
    <!-- Empty item for ListView -->

    <LinearLayout
        android:id="@+id/emptyView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noneView"
        android:paddingLeft="10dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/emptyHistoryText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/history_empty"
            android:textSize="25sp" />
    </LinearLayout>

</RelativeLayout>